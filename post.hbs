{{!< default}}

{{#post}}

  <article class="nightdriver-section nightdriver-post-full nightdriver-post-full--single {{post_class}}">
    <div class="nightdriver-container">
      <div class="nightdriver-section-content">
        <div class="nightdriver-post-full-text nightdriver-section-text">
          <header class="nightdriver-post-full-header">
            <div class="nightdriver-panel">
              {{#if primary_tag}}
                <div class="nightdriver-tag">
                  <a href="{{primary_tag.url}}">{{primary_tag.name}}</a>
                </div>
              {{/if}}

              <div class="nightdriver-post-full-meta nightdriver-meta">
                <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM D, YYYY"}}</time>
                <span class="nightdriver-meta-sep">·</span>
                <span>{{reading_time}}</span>
                {{#if primary_author}}
                  <span class="nightdriver-meta-sep">·</span>
                  <span>By {{primary_author.name}}</span>
                {{/if}}
              </div>
            </div>

            <h1 class="nightdriver-post-full-title">{{title}}</h1>

            {{#if custom_excerpt}}
              <p class="nightdriver-post-full-excerpt">{{custom_excerpt}}</p>
            {{/if}}
          </header>
        </div>

        {{#if feature_image}}
          <figure class="nightdriver-post-full-image nightdriver-post-full-image-wide">
            <img
              src="{{img_url feature_image size="xl"}}"
              srcset="{{img_url feature_image size="s"}} 300w,
                      {{img_url feature_image size="m"}} 600w,
                      {{img_url feature_image size="l"}} 1000w,
                      {{img_url feature_image size="xl"}} 2000w"
              sizes="(max-width: 768px) 100vw, 680px"
              alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
              loading="eager"
            >

            {{#if feature_image_caption}}
              <figcaption class="nightdriver-post-full-caption">{{feature_image_caption}}</figcaption>
            {{/if}}
          </figure>
        {{/if}}

        <div class="nightdriver-post-full-text nightdriver-section-text">
          <div class="nightdriver-post-full-content">
            {{content}}
          </div>
        </div>
      </div>
    </div>
  </article>

  {{#foreach tags visibility="public"}}
    {{#if @first}}
      <section class="nightdriver-section nightdriver-post-tags-section">
        <div class="nightdriver-container">
          <div class="nightdriver-section-content nightdriver-section-text">
            <div class="nightdriver-post-tags-list nightdriver-post-tags-list--full" aria-label="Post tags">
    {{/if}}
              <a class="nightdriver-post-taglink" href="{{url}}" rel="tag">#{{name}}</a>
    {{#if @last}}
            </div>
          </div>
        </div>
      </section>
    {{/if}}
  {{/foreach}}

  {{> "post/post-navigation"}}
  {{> "post/post-comments"}}

  {{!-- Keep related content for normal posts only. --}}
  {{#has tag="note,layby"}}
  {{else}}
    {{#if primary_tag}}
      {{#get "posts" filter="tag:{{primary_tag.slug}}+id:-{{id}}+tag:-note+tag:-layby+status:published" limit="3"}}
        {{#if posts}}
          {{> "content/post-list"
              title="Related Posts"
              posts=posts
              show_tags=false
              heading="h3"
          }}
        {{/if}}
      {{/get}}
    {{/if}}
  {{/has}}
{{/post}}
