{{#has tag="note,signal-notes,layby"}}
{{else}}
  <section class="nightdriver-section nightdriver-section--tight">
    <div class="nightdriver-container">
      <div class="nightdriver-section-content nightdriver-section-text">
        {{!-- Notes and Layby entries are kept out of standard post-to-post navigation. --}}
        <nav class="nightdriver-post-nav" aria-label="Post navigation">
          {{#get "posts" filter="published_at:<'{{published_at}}'+id:-{{id}}+tag:-note+tag:-layby+status:published" order="published_at desc" limit="1"}}
            {{#foreach posts}}
              <a class="nightdriver-post-nav-link nightdriver-post-nav-link--prev" href="{{url}}">
                <span class="nightdriver-post-nav-label">Previous</span>
                <span class="nightdriver-post-nav-title">{{title}}</span>
              </a>
            {{/foreach}}
          {{/get}}

          {{#get "posts" filter="published_at:>'{{published_at}}'+id:-{{id}}+tag:-note+tag:-layby+status:published" order="published_at asc" limit="1"}}
            {{#foreach posts}}
              <a class="nightdriver-post-nav-link nightdriver-post-nav-link--next" href="{{url}}">
                <span class="nightdriver-post-nav-label">Next</span>
                <span class="nightdriver-post-nav-title">{{title}}</span>
              </a>
            {{/foreach}}
          {{/get}}
        </nav>
      </div>
    </div>
  </section>
{{/has}}
