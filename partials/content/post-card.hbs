{{!-- Post Card Partial for Flexible Grid --}}
{{!-- Usage: {{> "content/post-card" size="medium"}} --}}

<article class="nightdriver-grid-card nightdriver-grid-card--{{size}} {{#unless feature_image}}nightdriver-grid-card--no-image{{/unless}} {{#if featured3mid}}nightdriver-grid-card--featured3-mid{{/if}}">

    {{#if primary_tag}}
        <div class="nightdriver-card-top">
            <a class="nightdriver-card-tag nightdriver-control" href="{{primary_tag.url}}">
                {{primary_tag.name}}
            </a>
        </div>
    {{/if}}

    {{#if feature_image}}
        <div class="nightdriver-card-media">
            <a href="{{url}}" aria-label="{{title}}">
                <img
                    src="{{img_url feature_image size="l"}}"
                    alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                    class="nightdriver-card-image"
                    loading="lazy"
                    {{#if feature_image.width}}width="{{feature_image.width}}"{{/if}}
                    {{#if feature_image.height}}height="{{feature_image.height}}"{{/if}}
                >
            </a>

            <div class="nightdriver-card-meta-vert" aria-hidden="true">
                <span class="nightdriver-card-meta-vert-text">{{date format="MMM DD, YYYY"}}</span>
            </div>
        </div>
    {{/if}}

    <div class="nightdriver-card-bottom">
        <h3 class="nightdriver-card-title">
            <a class="nightdriver-card-title-text" href="{{url}}">{{title}}</a>
        </h3>
    </div>
</article>
